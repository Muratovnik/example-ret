{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@inputs/*": [
        "./src/components/inputs/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@static/*": [
        "./src/static/*"
      ],
      "@utils": [
        "./src/utils/index.ts"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@types": [
        "./src/types/index.ts"
      ],
      "@style/mixins": [
        "./src/assets/styles/mixins/index.scss"
      ],
      "@style/utility-classes/*": [
        "./src/assets/styles/utility-classes/*"
      ],
      "@style/animations/*": [
        "./src/assets/styles/animations/*"
      ],
      "@style/variables": [
        "./src/assets/styles/variables/index.scss"
      ],
      "@constants": [
        "./src/constants/index.ts"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}